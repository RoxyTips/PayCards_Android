<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="wocr_RecognizerTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/wocr_primary</item>
        <item name="colorPrimaryDark">@color/wocr_primary_dark</item>
        <item name="colorAccent">@color/wocr_accent</item>
        <item name="android:windowBackground">@color/wocr_default_window_background</item>
    </style>

    <style name="wocr_RecognizerTheme.TransparentStatusBar" parent="wocr_RecognizerTheme.Base" />

    <style name="wocr_RecognizerTheme" parent="wocr_RecognizerTheme.TransparentStatusBar" />

    <style name="wocr_EnterManuallyButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <style name="wocr_PaycardsButtonTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/wocr_paycards_link_color</item>
    </style>

    <style name="wocr_PaycardsButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:theme">@style/wocr_PaycardsButtonTheme</item>
    </style>

    <style name="wocr_PositionCardTextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="wocr_FlashButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">@string/wocr_toggle_flash</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>